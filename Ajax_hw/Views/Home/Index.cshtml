@{
    ViewData["Title"] = "Home Page";
}
@section Style
{
    <style>
        #table {
            border: 2px solid orange;
            width: 600px;
            margin: auto
        }
        th,td {
           /* padding:10px;*/
            font-size:120%;
            border:2px solid orange;
            text-align:center;
        }

        tr.even {
            background-color:black;

        }
    </style>
}
<div class="text-center">
    <h1 class="display-4">Json Table</h1>
   
    <table id="table">
        <tr>
            <th>Name</th>
            <th>salary</th>
            <th>workYears</th>
        </tr>
       


    </table>
</div>
@section Scripts
{
<script>
    const emp = {
        "employees": [
            { "name": "Tom", "workYears": 3, "salary": 35000 },
            { "name": "Jack", "workYears": 5, "salary": 40000 },
            { "name": "Mary", "workYears": 7, "salary": 45000 }
        ]
    }

     

    for (let e in emp.employees)
    {
        let tr = "<tr>";
        let td =`<td> ${emp.employees[e].name}</td>
      <td> ${emp.employees[e].salary}</td>
       <td> ${emp.employees[e].workYears}</td>`
        $("#table").append(tr + td);
    };
  
</script>

}